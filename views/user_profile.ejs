<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-lg-9 col-xl-7">
      <div class="card">
        <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height: 200px">
          <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px">
            <% if(profile_user.avatar){ %>
              <img src="<%= profile_user.avatar%>" alt="<%= profile_user.name %>"
                class="img-fluid img-thumbnail rounded-circle mt-5 mb-2"
                style="width: 150px; height: 150px; z-index: 1" />
              <%}else{%>
                <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"
                  alt="<%= profile_user.name %>" class="img-fluid img-thumbnail rounded-circle mt-5 mb-2"
                  style="width: 150px; height: 150px; z-index: 1" />
                <%}%>
                  <!-- <button type="button" class="" data-mdb-ripple-color="dark" style="z-index: 1;">
              Edit profile
            </button> -->
                  <% if(user.id==profile_user.id){ %>
                    <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" style="z-index: 1"
                      data-bs-target="#exampleModal">
                      Edit Profile
                    </button>

                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                      aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h2 class="modal-title text-dark fs-5" id="exampleModalLabel">
                              Edit Your Profile
                            </h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <form action="/users/update/<%= profile_user.id %>" enctype="multipart/form-data"
                              method="POST">
                              <div class="mb-3">
                                <label for="recipient-name" class="col-form-label text-dark">Name:</label>
                                <input type="text" class="form-control" id="recipient-name" name="name"
                                  placeholder="Your Name" value="<%= profile_user.name %>" required />
                              </div>
                              <div class="mb-3">
                                <label for="recipient-name" class="col-form-label text-dark">Email:</label>
                                <input type="email" class="form-control" id="recipient-name" name="email"
                                  placeholder="Your Email" value="<%= profile_user.email %>" required />
                              </div>
                              <div class="mb-3">
                                <label for="recipient-name" class="col-form-label text-dark">Avatar:</label>
                                <input class="form-control" id="formFile" type="file" name="avatar"
                                  placeholder="Profile Picture" />
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                                  Close
                                </button>
                                <button type="submit" class="btn btn-outline-dark">
                                  Submit
                                </button>
                              </div>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                    <%}%>
          </div>
          <div class="ms-3" style="margin-top: 130px">
            <h5>
              <%= profile_user.name %>
            </h5>
          </div>
        </div>
        <div class="card-body p-4 text-black" style="margin-top: 100px">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <p class="lead fw-normal mb-0">Recent Posts</p>
          </div>
          <div class="d-flex flex-column mb-3 overflow-auto p-3 bg-light" style="max-width: auto; max-height: 250px">
            <% for(post of posts){ %>
              <% if(post.user.id==profile_user.id){ %>
                <%- include('_post') -%>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>